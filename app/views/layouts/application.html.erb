<!DOCTYPE html>
<html>
  <head>
    <title>Clinicapp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.4/css/bootstrap.min.css" integrity="sha384-2hfp1SzUoho7/TsGGGDaFdsuuDL0LX2hnUp6VkX3CUQ2K4K+xjboZdsXyp4oUHZj" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.4/js/bootstrap.min.js" integrity="sha384-VjEeINv9OSwtWFLAtmc4JCtEJXXBub00gtSnszmspDLCtC0I4z4nqz7rEFbIZLLU" crossorigin="anonymous"></script>
  </head>

  <body>

    <!-- <%= render "partials/flash" %> -->



    <nav class="navbar navbar-light bg-faded">
      <ul class="nav navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
        </li>
      </ul>
      <ul class="nav navbar-nav pull-xs-right">
        <% if @current_user %>
          <li class="nav-item">
            <%= link_to "#{@current_user.email}", '/', class: 'nav-link', method: :get %>
          </li>
          <li class="nav-item">
            <%= link_to "Log Out", '/logout', class: 'nav-link', method: :delete %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Log In", '/login', class: 'nav-link', method: :get %>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/new">Sign Up</a>
          </li>
        <% end %>
      </ul>
    </nav>
    <%= yield %>
  </body>
</html>
